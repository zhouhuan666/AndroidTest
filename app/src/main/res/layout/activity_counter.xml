<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".mvi.simple.CounterActivity">

    <!-- 标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MVI 计数器示例"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/black" />

    <!-- 计数显示区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/counter_display_background"
        android:padding="24dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/tvCounterValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:text="42" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:text="错误: 计数不能超过100"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- 操作按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btnDecrement"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_circle_background"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnIncrement"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="+"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_circle_background"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- 重置和设置值按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置"
            android:layout_marginEnd="16dp"
            android:minWidth="100dp" />

        <Button
            android:id="@+id/btnSetValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置值"
            android:layout_marginStart="16dp"
            android:minWidth="100dp" />

    </LinearLayout>

    <!-- 输入框区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/etCustomValue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="输入数值"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnApplyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 历史记录 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="操作历史："
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/history_background"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无操作历史"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            tools:text="增加到 1\n增加到 2\n减少到 1\n重置为 0" />

    </ScrollView>

</LinearLayout>
